pipeline{
agent {label 'agent1'}
  stages
  {
      stage('Build'){
         agent{
            docker {
                image 'node:16-alpine'
            }
          }
        steps{
            sh 'node --version'   
        }
      }      
     stage('Front'){
         agent{
            docker {
                image 'jekyll/jekyll:latest'
            }
          }
        steps{
            sh 'jekyll -v'   
        }
      }  
      
  
  }

}
