pipeline{
agent none
  stages
  {
      stage('Node'){
         agent{
            docker {
                image 'node:16-alpine'
            }
          }
        steps{
            sh 'node --version'   
        }
      }      
      
      
      stage('Jekyll'){
         agent{
            docker {
                image 'jekyll/jekyll:latest'
            }
          }
        steps{
            sh 'jekyll -v'   
        }
      }
      
      
      
  
  }




}
